<h1>Editing Book</h1>
<%= notice %>

<%= form_with model:@book, local:true do |f| %>
<% if @book.errors.any? %>
      <ul>
        <li>error</li>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>  
       </ul>
<% end %>
<p>Title</p>
<%= f.text_field :title %>
<p>Body</p>
<%= f.text_area :body %>
<%= f.submit "Update Book" %>
<% end %>

<%= link_to "show" , book_path %>
<%= link_to "back", "/books" %>