<h1>Books</h1>
<%= notice %>
<table>
    <thead>
        <th>title</th>
        <th>body</th>
    </thead>
        <tbosy>
            <% @books.each do |book| %>
                <tr>
                    <td><%= book.title %></td>               
                    <td><%= book.body %></td>
                    <td><%= link_to "show" , book_path(book.id) %>
                        <%= link_to "edit" , edit_book_path(book.id) %>
                        <%= link_to "delete" , book_path(book.id) ,  method: :delete %>
                    </td>
                </tr>
            <% end %>
        </tbody>
</table>


<h2>New Book</h2>
    <%= form_with model:@book , url:books_path,  local:true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <br><%= f.submit "Create Book" %>
    <% end %>
